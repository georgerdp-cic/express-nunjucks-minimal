{% from "../components/header/macro.njk" import govukHeader %}
{% from "..//components/footer/macro.njk" import govukFooter %}

<!DOCTYPE html>

<html lan="eng">

  {% include "_partials/head.njk" %}

  <body>
    {% block header %}
      {{ govukHeader({
    homepageUrl: "#",
    containerClasses: "govuk-width-container",
    serviceName: "Index Page",
    serviceUrl: "#",
    navigation: [
      {
        href: "/",
        text: "Navigation item 1",
        active: true
      },
      {
        href: "/",
        text: "Navigation item 2"
      }
    ]
  }) }}
    {% endblock %}


    {% block bodyContant %}
      <div style="min-height: 100vh; display: flex;" class="govuk-width-container">
        <main style="flex: 1;" class="govuk-main-wrapper govuk-main-wrapper--auto-spacing">
        <h1> Index page </h1>  
        </main>
      </div>
    {% endblock %}

    {% block footer %}
      {{ govukFooter({
    meta: {
      items: [
        {
          href: "#1",
          text: "Help"
        },
        {
          href: "#2",
          text: "Cookies"
        },
        {
          href: "#3",
          text: "Contact"
        },
        {
          href: "#4",
          text: "Terms and conditions"
        }
      ]
    }
  }) }}
    {% endblock %}
    
    <script rel="stylesheet" src="./js/all.js"></script>
    <script rel="stylesheet" src="./js/main.js"></script>
  </body>
</html>