{
  "ignore": [
    ".git",
    "node_modules/",
    "dist/",
    "coverage/",
    "gulpfile.js",
    "nodemon.json",
    "src/public/"
  ],
  "watch": [
    "src"
  ],
  "delay": "200",
  "ext": "ts",
  "restartable": "rs",

  "verbose": true,
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "tsconfig.json"
  }
}